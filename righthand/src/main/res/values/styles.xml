<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dg_select_button">
        <item name="android:background">@drawable/dg_button_layout</item>
        <item name="android:textSize">@dimen/dg_bt_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>


    <style name="dg_select_content">
        <item name="android:textSize">@dimen/dg_bt_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dg_select_title">
        <item name="android:textSize">@dimen/dg_bt_title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item><!-- 不用window title，使用自己的layout来做title -->
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:minWidth">280dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="TipDialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="tipdialog_layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">?attr/content_spacing_horizontal</item>
        <item name="android:paddingRight">?attr/content_spacing_horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/dg_tip_bg</item>
    </style>
</resources>