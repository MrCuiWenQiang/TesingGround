<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHighlight">@color/background_pressed</item>
    </style>

    <style name="TextAppearance.Title"/>
    <style name="TextAppearance.Title.Gray">
        <item name="android:textColor">@color/gray_3</item>
    </style>
    <style name="TextAppearance.Title.Large">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.ListItem">
        <item name="android:textColor">@color/list_item_text_color</item>
    </style>

    <style name="TextAppearance.GridItem"/>
    <style name="TextAppearance.GridItem.Small">
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>